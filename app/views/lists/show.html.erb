<p id="notice"><%= notice %></p>

<h1><%= @list.header %></h1>

<!-- Latest Sortable
<script src="http://rubaxa.github.io/Sortable/Sortable.js"></script> -->

    <div id="orderedList" class="list-group">
      <% @items.each do |item| %>
        <div class="list-group-item"><%= item.label %></div>
      <% end %>
    </div>

    <div id = "status">Status will be shown here.</div>


    <script>
    Sortable.create(orderedList, {
      onEnd: function (evt) {
         var params = {"from": evt.oldIndex, "to": evt.newIndex};
             $.get('<%= reorder_list_path(@list) %>', params,
              function(data){
                 data;
              });
          },
         }
      );
     </script>
<%= link_to 'Edit', edit_list_path(@list) %> |
